@model StorageControl.Web.Models.Categories.CategoriesCreateModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-offset-4 col-lg-4">
            <h2>Adicionar categoria</h2>

            @using (Html.BeginForm("Create", "Categories", FormMethod.Post, new { @class = "input-group" }))
            {
                <div class="input-group">
                    @Html.TextBoxFor(m => m.Category.Name, new { @class = "form-control", @placeholder = "Nome" })
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default">
                            <span class="glyphicon glyphicon-save"></span>
                        </button>
                    </span>
                </div>
            }
        </div>
    </div>
</div>

