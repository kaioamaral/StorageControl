@model StorageControl.Web.Models.Categories.CategoriesDeleteModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-offset-4 col-lg-4">
            <h3 class="text-center">Confirmar deleção da categoria <strong>@Model.Category.Name</strong>? </h3>

            @using (Html.BeginForm(string.Format("Delete/{0}", Model.Category.Id),
                "Categories", FormMethod.Post, new { @class = "form-group text-center" }))
            {
                <a href="../../Categories" class="btn btn-default btn-sm">Não</a>
                <button type="submit" class="btn btn-danger btn-sm">Sim</button>
            }
        </div>
    </div>
</div>

