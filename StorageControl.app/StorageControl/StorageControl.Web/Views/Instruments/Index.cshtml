@model StorageControl.Web.Models.Instruments.InstrumentsListModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-offset-2 col-lg-8">
            <h2 class="text-center">
                Instrumentos
                <a href="/Instruments/Create" class="btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-plus"></span>
                </a>
            </h2>
            <br />
            <table class="table table-striped table-hover">
                <tr>
                    <th>Fabricante</th>
                    <th>Modelo</th>
                    <th>Quantidade</th>
                    <th>Preço</th>
                    <th>Categoria</th>
                    <th>Tipo</th>
                    <th></th>
                </tr>

                @foreach (var instrument in Model.Instruments)
                {
                    <tr>
                        <td> @instrument.Manufacturer </td>
                        <td> @instrument.Model </td>
                        <td> @instrument.Amount </td>
                        <td> @instrument.UnitPrice </td>
                        <td> @instrument.Category.Name </td>
                        <td> @instrument.Type.Name </td>
                        <td>
                            <a href="/Instruments/Edit/@instrument.Id" class="btn btn-default btn-sm">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                            <a href="/Instruments/Delete/@instrument.Id" class="btn btn-danger btn-sm">
                                <span class="glyphicon glyphicon-remove"></span>
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-lg-2 clearfix"></div>
    </div>
</div>
